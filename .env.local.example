# Discord Publish Bot - Local Development Environment
# Copy this file to .env.local and fill in your actual values for local testing
# This file is used by docker-compose.yml for local container testing

# =============================================================================
# DISCORD BOT CONFIGURATION
# =============================================================================
# Get these from Discord Developer Portal: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=your_discord_application_id_here
DISCORD_PUBLIC_KEY=your_discord_public_key_here
DISCORD_USER_ID=your_discord_user_id_here
DISCORD_GUILD_ID=your_test_server_guild_id_here

# =============================================================================
# GITHUB INTEGRATION CONFIGURATION
# =============================================================================
# Create a personal access token with repo permissions: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=username/repository-name
GITHUB_BRANCH=main

# =============================================================================
# API SECURITY CONFIGURATION
# =============================================================================
# Generate a secure 32+ character API key for authentication
API_KEY=generate_32_character_secure_key_here
FASTAPI_ENDPOINT=http://localhost:8000

# =============================================================================
# PUBLISHING CONFIGURATION
# =============================================================================
# Site-specific content configuration
SITE_BASE_URL=https://yourdomain.com
DEFAULT_AUTHOR=Your Name

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# These are set by docker-compose.yml but can be overridden here
# ENVIRONMENT=development
# LOG_LEVEL=DEBUG
# API_HOST=0.0.0.0
# API_PORT=8000
